<div class="container signup">
  <div class="row justify-content-center wall">
    <div class="col-sm-6 col-md-4 col-md-offset-4 d-flex flex-column">
      <h2 class="title">
        Fotobook Signup
      </h2>
      
      <div class="alternative">
        <ul>
          <li>
            <%= link_to image_tag("google_logo.png"), "#", class: "rounded rounded-circle img-fluid" %>
          </li>
          <li>
            <%= link_to image_tag("fb_logo.png"), "#",class: "rounded rounded-circle img-fluid" %>
          </li>
          <li>
            <%= link_to image_tag("twitter_logo.png"), "#",class: "rounded rounded-circle img-fluid" %>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="row justify-content-center wall">
    <div class="col-sm-7 col-md-5 col-md-offset-5 d-flex flex-column">
      <div class="wall-account">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field form-group">
            <%= f.label :first_name, "First Name" %><br />
            <%= f.text_field :first_name, autofocus: true %>
          </div>
          <div class="field form-group">
            <%= f.label :last_name, "Last Name" %><br />
            <%= f.text_field :last_name %>
          </div>
          <div class="field form-group">
            <%= f.label :email, "Email" %><br />
            <%= f.email_field :email, autocomplete: "email" %>
          </div>
          <div class="field form-group">
            <%= f.label :password, "New Password" %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field form-group">
            <%= f.label :password_confirmation, "Password Confirmation" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div >
            <%= f.fields_for :avatar_attributes do |f| %>
              <%= f.hidden_field :picture_url, value: "#{resource.id}_default.jpg" %>
              <%= f.hidden_field :pictureable_id, value: resource.id %>
              <%= f.hidden_field :pictureable_type, value: "User" %>
            <% end %>
          </div>
          <div class="actions">
            <%= f.submit "Signup", class:"btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
