<div class="container">
  <div class="row justify-content-center wall">
    <div class="col-sm-6 col-md-4 col-md-offset-4 d-flex flex-column">
      <h2 class="title">
        Fotobook Login
      </h2>

      <div class="alternative">
        <ul>
          <li>
            <%= link_to image_tag("google_logo.png"), "#", class: "rounded rounded-circle img-fluid" %>
          </li>
          <li>
            <%= link_to image_tag("fb_logo.png"), "#",class: "rounded rounded-circle img-fluid" %>
          </li>
          <li>
            <%= link_to image_tag("twitter_logo.png"), "#",class: "rounded rounded-circle img-fluid" %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  
  <div class="row justify-content-center wall">
    <div class="col-sm-7 col-md-5 col-md-offset-5 d-flex flex-column">
      <div class="wall-account">
        <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group">
            <%= f.text_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
          </div>
          <div class="field form-group">
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>
          <%= f.submit "Login", class: "btn" %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end %>
      </div>
      <%= link_to('Create an account', new_user_registration_path, class: "text-center") %> 
    </div>
  </div>
</div>
